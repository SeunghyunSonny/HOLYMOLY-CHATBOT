# 로깅 모듈을 임포트합니다.
import logging

# 로그 메시지의 형식을 정의합니다.
formatter = '%(asctime)s - %(funcName)s - %(filename)s - %(levelname)s - %(message)s'

# 로거를 설정하고 반환하는 함수를 정의합니다.
def get_logger(logger_name):
    # 주어진 이름으로 로거 인스턴스를 가져옵니다.
    logger = logging.getLogger(logger_name)
    # 로거의 로그 레벨을 DEBUG로 설정합니다.
    logger.setLevel(logging.DEBUG)

    # 콘솔에 로그 메시지를 출력하기 위한 핸들러를 생성합니다.
    console_handler = logging.StreamHandler()
    # 콘솔 핸들러의 로그 레벨을 DEBUG로 설정합니다.
    console_handler.setLevel(logging.DEBUG)
    # 콘솔 핸들러의 로그 메시지 형식을 설정합니다.
    ch_format = logging.Formatter(formatter)
    console_handler.setFormatter(ch_format)

    # 로거에 콘솔 핸들러를 추가합니다.
    logger.addHandler(console_handler)

    # 설정된 로거를 반환합니다.
    return logger
